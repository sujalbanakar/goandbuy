<%- include('./partials/header') %>
<% if(success.length>0){ %>
  <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
    <% success.forEach(function(msg) { %>
      <span class="inline-block mt-1 mb-1 text-white"><%= msg %></span><br>
    <% }) %>
  </div> 
<% } %>

<div class="min-h-screen flex flex-col">
  <div class="container px-10 py-20 flex flex-grow">
    <div class="w-[25%] flex h-screen flex-col items-start">
      <div class="flex flex-col">
        <a class="block w-fit mb-2" href="/owners/own">All Products</a>
        <a class="block w-fit mb-2" href="">Create new product</a>
      </div>
    </div>
    <main class="w-3/4 bg-white p-8 shadow ml-4 text-gray-800 ">
      <h2 class="text-xl font-bold mb-4">Create New Product</h2>
      <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">Product Details</h3>
          <div class="mb-4">
            <label class="block mb-2 font-medium">
                Product Image <span class="text-red-500">*</span>
            </label>
            <input name="image" type="file" class="py-2 px-4 rounded required" value="Select File">
          </div>
          <div class="grid grid-cols-2 gap-4">
            <input name="name" type="text" placeholder="Product Name" class="border p-2 rounded w-full " >
            <input name="price" type="text" placeholder="Product Price" class="border p-2 rounded w-full ">
          <div class="flex flex-col gap-1">
  <label for="inStock" class="text-sm">Stock Quantity</label>
  <input id="inStock" name="inStock" type="number" min="0" class="border p-2 rounded" placeholder="Enter stock quantity">
</div>
            <input name="discount" type="text" placeholder="Discount Price in percentage(%)" class="border p-2 rounded w-full ">
          </div>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">
            Panel Details <span class="text-red-500">*</span>
        </h3>
          <div class="grid grid-cols-2 gap-4">
            <input name="bgcolor" type="text" placeholder="Background Color" class="border p-2 rounded w-full">
            <input name="panelcolor" type="text" placeholder="Panel Color" class="border p-2 rounded w-full">
            <input name="textcolor" type="text" placeholder="Text Color" class="border p-2 rounded w-full">
          </div>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">
            Additional Info <span class="text-red-500">*</span>
        </h3>
          <div class="grid grid-cols-2 gap-4">
            <input name="brand" type="text" placeholder="Brand" class="border p-2 rounded w-full required">
            <input name="warranty" type="text" placeholder="Warranty Info" class="border p-2 rounded w-full required">
          </div>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">Offers</h3>
          <textarea name="offers" placeholder="Separate multiple offers with semicolon" class="border p-2 rounded w-full"></textarea>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">
            Features <span class="text-red-500">*</span>
        </h3>
          <textarea name="features" placeholder="Separate multiple features with semicolon" class="border p-2 rounded w-full"></textarea>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">
            Specifications <span class="text-red-500">*</span>
        </h3>
          <textarea name="specifications" placeholder="Enter key:value pairs separated by semicolon (e.g. RAM:8GB;Storage:512GB)" class="border p-2 rounded w-full"></textarea>
        </div>

        <!-- <div class="mb-6">
          <h3 class="text-lg font-semibold mb-2">
            Delivery Options <span class="text-red-500">*</span>
        </h3>
          <textarea name="deliveryOptions" placeholder="Separate delivery options with commas (e.g. Free Delivery, Secure Transaction)" class="border p-2 rounded w-full"></textarea>
        </div> -->

        <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white" type="submit" value="Create New Product">
      </form>
    </main>
  </div>
</div>
<%- include('./partials/footer') %>
