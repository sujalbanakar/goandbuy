<script>
   window.addEventListener("load", () => {
    document.getElementById("loading-overlay").style.opacity = "0";
    setTimeout(() => {
      document.getElementById("loading-overlay").style.display = "none";
    }, 500); // wait for fade-out
  });


  // Auto-dismiss flash messages after 3 seconds
  setTimeout(() => {
    ['successMessage', 'errorMessage'].forEach(id => {
      const el = document.getElementById(id);
      if (el) {
        el.classList.add('opacity-0');
        setTimeout(() => el.remove(), 700);
      }
    });
  }, 3000); 
  
   // Manual close handler
  function closeFlash(id) {
    const el = document.getElementById(id);
    if (el) {
      el.classList.add('opacity-0');
      setTimeout(() => el.remove(), 700);
    }
  }
  
      const toggleButtons = document.querySelectorAll(".toggle-btn");
  const toggleBoxes = document.querySelectorAll(".toggle-box");

  toggleButtons.forEach((btn) => {
    btn.addEventListener("click", (e) => {
      e.stopPropagation(); // prevent click from bubbling to document
      const boxId = btn.getAttribute("data-toggle-id");
      const box = document.getElementById(boxId);

      // Close all other boxes first
      toggleBoxes.forEach((b) => {
        if (b.id !== boxId) b.classList.add("hidden");
      });

      // Toggle this one
      box.classList.toggle("hidden");
    });
  });

  // Close all toggle boxes on outside click
  document.addEventListener("click", () => {
    toggleBoxes.forEach((box) => box.classList.add("hidden"));
  });
</script>

