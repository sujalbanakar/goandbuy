      <path fill="#FBBC05" d="M10.6 28.1c-.6-1.9-.9-3.9-.9-6s.3-4.1.9-6L3.1 14C1.1 17.8 0 21.8 0 26s1.1 8.2 3.1 12l7.5-5.9z"/>
      <path fill="#34A853" d="M24 48c5.5 0 10.2-1.8 13.6-4.9l-7.4-5.8c-2 1.3-4.5 2-7.2 2-6.3 0-11.5-4.5-13.3-10.6l-7.5 5.8C6.9 42.2 14.8 48 24 48z"/>
